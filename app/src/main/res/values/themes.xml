<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SafeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->



        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for the table header -->
    <style name="TableHeaderStyle">
        <item name="android:background">#80ADD8E6</item> <!-- Light blue color -->
    </style>

    <!-- Style for the table rows -->
    <style name="TableRowStyle">
        <item name="android:background">#FFF5F5F5</item> <!-- Light white color -->
    </style>

</resources>